{{! template-lint-disable block-indentation }}
<div class="table">
  {{! template-lint-disable block-indentation }}
  <h1>{{title}}</h1>
  <table class="table table-bordered">
    <thead class="table-header">
      <th>Id</th>
      <th>Product</th>
      <th>Description</th>
      <th>Type</th>
      <th>Price</th>
      <th>Actions</th>
    </thead>
    <tbody>
      {{#each clothes as |productList index|}}
        <tr class={{if productList.isChecked "mobRow-true" "mobRow-false"}}>
          {{! template-lint-disable block-indentation }}
          <td>
            {{! template-lint-disable self-closing-void-elements }}
            <input
              type="checkbox"
              id={{index}}
              value={{productList.name}}
              onclick={{action "checkBoxClick" productList}}
              disabled={{if (gt productList.price 25000) true false}}
            /></td>
          <td>{{productList.name}}</td>
          <td>{{productList.description}}</td>
          <td>{{productList.type}}</td>
          <td>{{productList.price}}</td>
          <td>
            {{#if (not (eq productList.type "apparel"))}}
              <button
                type="button"
                class="btn btn-info"
                onclick={{action "remove" productList.id}}
              >Del</button>
            {{/if}}
          </td>
        </tr>
      {{/each}}
    </tbody>
  </table>
</div>

{{total-products mobiles=checkedMobiles}}